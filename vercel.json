{
  "version": 2,
  "name": "socialmediakampagnen",
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/auth/register",
      "dest": "/api/auth/register.js"
    },
    {
      "src": "/api/auth/login", 
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/api/users/me",
      "dest": "/api/users/me.js"
    },
    {
      "src": "/api/users/company",
      "dest": "/api/users/company.js"
    },
    {
      "src": "/api/payments/plans",
      "dest": "/api/payments/plans.js"
    },
    {
      "src": "/api/payments/create-subscription",
      "dest": "/api/payments/create-subscription.js"
    },
    {
      "src": "/api/payments/create-payment",
      "dest": "/api/payments/create-payment.js"
    },
    {
      "src": "/api/payments/billing",
      "dest": "/api/payments/billing.js"
    },
    {
      "src": "/api/campaigns",
      "dest": "/api/campaigns/index.js"
    },
    {
      "src": "/api/campaigns/([^/]+)",
      "dest": "/api/campaigns/[id].js?id=$1"
    },
    {
      "src": "/api/campaigns/submit",
      "dest": "/api/campaigns/submit.js"
    },
    {
      "src": "/api/ai/generate-campaign",
      "dest": "/api/ai/generate-campaign.js"
    },
    {
      "src": "/api/ai/optimize-campaign",
      "dest": "/api/ai/optimize-campaign.js"
    },
    {
      "src": "/api/ai/generate-variations",
      "dest": "/api/ai/generate-variations.js"
    },
    {
      "src": "/api/ai/generate-images",
      "dest": "/api/ai/generate-images.js"
    },
    {
      "src": "/api/admin/dashboard",
      "dest": "/api/admin/dashboard.js"
    },
    {
      "src": "/api/admin/users",
      "dest": "/api/admin/users.js"
    },
    {
      "src": "/api/admin/campaigns/approve",
      "dest": "/api/admin/campaigns/approve.js"
    },
    {
      "src": "/api/webhooks/stripe",
      "dest": "/api/webhooks/stripe.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}

